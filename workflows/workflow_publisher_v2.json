                "authentication": "genericCredentialType",
                "genericAuthType": "httpHeaderAuth",
                "sendBody": true,
                "bodyParameters": {
                    "parameters": [
                        {
                            "name": "platforms",
                            "value": "={{ [\"instagram\", \"tiktok\", \"linkedin\", \"youtube_shorts\", \"facebook\"] }}"
                        },
                        {
                            "name": "media_url",
                            "value": "={{ $('Get Ready Videos').item.json.Video_Link }}"
                        },
                        {
